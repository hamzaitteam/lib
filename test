computed: {
  filteredResults() {
    // Start by filtering by name
    let results = this.searchResults.filter(item => 
      item.LIBER_NM.toLowerCase().includes(this.searchTerm.toLowerCase())
    );

    // Filter by source if selected
    if (this.source && this.source.trim() !== '') {
      results = results.filter(item => item.SOURCE_NAME === this.source)
    }

    // Filter by type if selected
    if (this.type && this.type.trim() !== '') {
      results = results.filter(item => item.TYPE_NAME === this.type)
    }

    // Filter by status if selected
    if (this.status && this.status.trim() !== '') {
      results = results.filter(item => item.STATUS_NAME === this.status)
    }

    return results;
  }
}
