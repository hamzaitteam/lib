<div v-if="showModal" class="modal" @click="closeModal">
  <div class="modal-content" @click.stop>
    <span class="close" @click="showModal=false">&times;</span>
    <embed :src="pdfSrc" type="application/pdf" style="width: 100%; height: 80vh;" />
  </div>
</div>
methods:{
  // ...
  closeModal() {
    this.showModal = false;
  },
  // ...
}

.close {
  position: absolute;
  left: 25px;
  top: 0;
  color: #000;
  font-size: 35px;
  font-weight: bold;
}
