<script>
export default {
  name: "App",
  data() {
    return {
      idNumber: "",
      firstName: "",
      fatherName: "",
      grandfatherName: "",
      lastName: ""
    };
  },
  methods: {
    submitForm() {
      // Here, you can access the form data from your Vue instance's data properties
      console.log(this.idNumber, this.firstName, this.fatherName, this.grandfatherName, this.lastName);
      // Perform your search here
    },
    clearInput() {
      this.idNumber = '';
      this.firstName = '';
      this.fatherName = '';
      this.grandfatherName = '';
      this.lastName = '';
    }
  }
};
</script>
