async goToPage(pageNumber) {
    this.currentPage = pageNumber;
    await this.submitForm();
}
<div>
    <button @click="previousPage">السابق</button>

    <button
        v-for="n in totalPages"
        :key="n"
        @click="goToPage(n)"
        :class="{ 'is-active': n === currentPage }"
    >
        {{ n }}
    </button>

    <button @click="nextPage">التالي</button>
</div>
